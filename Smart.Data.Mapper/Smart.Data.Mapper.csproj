<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net5.0;netcoreapp3.1;netstandard2.1</TargetFrameworks>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <CodeAnalysisRuleSet>..\Smart.Data.Mapper.ruleset</CodeAnalysisRuleSet>
    <RootNamespace>Smart</RootNamespace>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
    <PackageReference Include="System.Data.Common" Version="4.3.0" />
    <PackageReference Include="System.Memory" Version="4.5.4" />
    <PackageReference Include="System.Reflection.Emit" Version="4.7.0" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.7.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Usa.Smart.Converter" Version="2.0.0" />
    <PackageReference Include="Usa.Smart.Core" Version="2.0.6" />
  </ItemGroup>

  <PropertyGroup>
    <PackageId>Usa.Smart.Data.Mapper</PackageId>
    <Title>Smart.Data.Mapper .NET</Title>
    <Description>Smart data mapper library for .NET</Description>
    <Summary>Smart data mapper library for .NET</Summary>
    <PackageTags>smart ado.net orm micro-orm</PackageTags>
  </PropertyGroup>

</Project>
